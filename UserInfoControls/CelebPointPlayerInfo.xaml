<UserControl x:Class="KinectV01.UserInfoControls.CelebPointPlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KinectV01.UserInfoControls"
             mc:Ignorable="d" BorderBrush="Black" BorderThickness="2,2,2,2" Height="50">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/UserInfoControls/PlayerInfoImage.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Height="46" VerticalAlignment="Center" Source="/sampleimg.jpg" Grid.Column="1" HorizontalAlignment="Left" Width="46"/>
        <Label x:Name="lblUserName" Content="닉네임" FontFamily="NEXON Football Gothic B" Foreground="White" HorizontalAlignment="Left" Margin="52,11,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" Grid.Column="1" Width="50"/>
        <Label x:Name="lblUserPoint" Content="점수" FontFamily="NEXON Football Gothic B" Foreground="White" HorizontalAlignment="Left" Margin="110,0,0,0" VerticalAlignment="Center" Height="38" Width="68" FontSize="18" Grid.Column="1"/>
    </Grid>
</UserControl>
