<Window x:Class="KinectV01.EnterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectV01"
        mc:Ignorable="d"
        Title="EnterName" Height="450" Width="800">
    <Window.DataContext>
        <StaticResource ResourceKey="mainViewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="215*"/>
        </Grid.RowDefinitions>
        <Button Content="Button" Command="{Binding EnterCompleteCommand}" HorizontalAlignment="Center" Margin="0,335,0,0" VerticalAlignment="Top" Height="44" Width="128" Grid.Row="1"/>
        <TextBox x:Name="idolName" Text="{Binding IDolID, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="336,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox x:Name="userName" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="26" Margin="336,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>

    </Grid>
</Window>
